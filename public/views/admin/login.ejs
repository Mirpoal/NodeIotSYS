<%- include public/header.ejs%>
<body>
  <article class="sign-in">
    <div class="content">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">登录智能宿舍系统</h3>
        </div>
        <div class="panel-body">
          <form id="signInForm" name="signInForm" action="/" method="post">
            <div  class="form-group">
              <label class="sr-only" for="email">Email：</label>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                <input  class="form-control" type="email" name="email" placeholder="请输入Email">
              </div>
            </div>
            <div class="form-group">
              <label class="sr-only" for="password">密码：</label>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
                <input class="form-control" type="password" name="password" placeholder="请输入密码" >
              </div>
            </div>
            <div class="checkbox">
              <label>
                <input name="autoSignIn" type="checkbox"> 下次自动登陆
              </label>
            </div>
            <button class="btn btn-primary btn-block" form="signInForm" type="submit" id="signIn">登录</button>
            <div>
              <label class="text-danger"><h5><%= logininfo%></h5></label>
            </div>
          </form>
        </div>
      </div>
      <div class="noderiot">Powered by NoderIotSys</div>
    </div>
  </article>
</body>

<script src="/views/admin/js/validator.js"></script>

<%- include public/layout-footer.ejs%>